<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Atracoes"
             Title="Atracoes"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource MidnightBlue}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         HorizontalOptions="Center"
                         Padding="10"
                         Spacing="10" >
        
        <Label 
            Text="Hotel"
            FontFamily="Kalam"
            FontSize="50"
            TextColor="{StaticResource White}" />

        <Image Source="cafedamanha.png" 
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Label 
                Text="Café da manhã"                   
                FontSize="20"
                TextColor="{StaticResource White}"
                HorizontalOptions="Center" />

        <Image Source="lazer.png" 
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Label 
                Text="Lazer"                   
                FontSize="20"
                TextColor="{StaticResource White}"
                HorizontalOptions="Center" />

        <Image Source="acomodacao.png" 
               WidthRequest="100"   
               HeightRequest="100"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Label 
                Text="Acomodações"                   
                FontSize="20"
                TextColor="{StaticResource White}"
                HorizontalOptions="Center" />

        <Button Text="Faça sua reserva" Clicked="Button_Clicked" />
        
    </VerticalStackLayout>

    

</ContentPage>